@import url('https://fonts.googleapis.com/css2?family=Dosis:wght@200;300;400;500;600;700;800&family=Quicksand:wght@300;400;500;600;700&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Vibur&display=swap');
@import '~line-awesome/dist/line-awesome/css/line-awesome.css'

@import '~nib/index.styl'
normalize-css()

$color-primary = #717CF0

*
  box-sizing border-box

@import 'classes'
@import 'forms'

html
  height 100%

body
  font-family 'Quicksand', sans-serif
  height 100%
  color #424242

a
  color $color-primary
  font-weight 700
  text-decoration none

#app
  height 100%

header
  position fixed
  top 0
  left 0
  width 100%
  height 100px
  display flex
  align-items center
  z-index 100
  background white
  border-bottom 1px solid rgba(0,0,0,0.2)
  nav
    width 100%
    div.column:nth-child(1)
      display flex
      flex-basis 50%
      align-items center
      input
        margin 0
    div.flex
      justify-content space-between
    h1.logo
      font-family 'Vibur'
      color black
      font-size 22px
      margin 0
      margin-right 50px
      display inline-block
      a
        color black
        font-weight normal
    button
      flex-basis 180px
    form
      flex-grow 1
      div.search-box
        position relative
        i
          position absolute
          top 50%
          left 20px
          transform translate(0, -50%)
        input
          padding-left 50px
          color rgba(0,0,0,0.5)
          &::placeholder
            color rgba(0,0,0,0.2)
  &.only-logo
    background transparent
    border none
    .container
      width 100%
      padding 0 30px
      max-width initial
    nav
      h1
        a
          color white
  ul.user-actions
    margin 0
    padding 0
    li
      display inline-block
      list-style none
      a
        font-size 32px
        color black
        margin-left 10px

        

h1
  font-family 'Dosis', sans-serif
  font-weight normal
  font-size 36px

